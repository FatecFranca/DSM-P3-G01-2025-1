generator client {
  provider = "prisma-client-js"
  output   = "./node_modules/@prisma/client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Cliente {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  nome         String
  email        String   @unique
  senha        String
  cpf          String   @unique
  logradouro   String
  num_casa     String
  complemento  String?
  bairro       String
  cidade       String
  uf           String  
  cep          String
  celular      String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Produto {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  nome         String
  descricao    String
  preco        Float
  imagem       String
  categoria    String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

 
