generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
model Cliente {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  nome         String
  email        String   @unique
  senha        String
  cpf          String   @unique
  logradouro   String
  num_casa     String
  complemento  String?
  bairro       String
  cidade       String
  uf           String  
  cep          String
  celular      String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Livro {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  titulo      String
  autor       String
  editora     String
  isbn        String   @unique
  ano         Int
  genero      String
  preco       Float
  quantidade  Int
  sinopse     String
  capa        String   
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}





