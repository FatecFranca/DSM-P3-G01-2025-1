generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model avaliacoes {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model clientes {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  nome        String
  email       String
  senha       String
  cpf         String
  logradouro  String
  num_casa    String
  complemento String
  bairro      String
  cidade      String
  uf          String
  cep         String
  celular     String
}

model livros {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  titulo      String
  autor       String
  editora     String
  isbn        String
  ano         Int
  genero      String
  preco       Float
  quantidade  Int
  sinopse     String
  capa        String
}

model Autor {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  nome  String
  foto  String
}
